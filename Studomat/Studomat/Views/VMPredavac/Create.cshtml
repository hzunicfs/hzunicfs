@model Algebra.Models.VMPredavac

@{
    ViewBag.Title = "Create";
    <link href="@Url.Content("~/Content/Style1.css")" rel="stylesheet" type="text/css" />
}

<h3><b>NOVI PREDAVAČ</b></h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
         @foreach (ModelState modelState in ViewData.ModelState.Values)
            {
                if (modelState.Errors.Any(ms => ms.ErrorMessage == "Predavač sa tim OIB-om već postoji.Klikni za detalje."))
                    {@Html.ActionLink("Predavač sa tim OIB-om već postoji.Klikni za detalje.", "Details", null, new { @class = "text-danger" });
                        <p></p>

                    }
                if (modelState.Errors.Any(ms => ms.ErrorMessage == "Predavač sa tim brojem osobne iskaznice već postoji.Klikni za detalje."))
                    { @Html.ActionLink("Predavač sa tim brojem osobne iskaznice već postoji.Klikni za detalje.", "Details", null, new { @class = "text-danger" })
                        <p></p>
                    }
                if (modelState.Errors.Any(ms => ms.ErrorMessage == "Predavač sa tim  Email-om već postoji."))
                    { <div class="text-danger">
                       <text>Predavač sa tim  Email-om već postoji.</text>
                      </div>
                    }
             }


    
        <div class="form-group">
            @Html.LabelFor(model => model.Predavaci.Ime, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Predavaci.Ime, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Predavaci.Ime, "", new { @class = "text-danger" })

            </div>
        </div>

