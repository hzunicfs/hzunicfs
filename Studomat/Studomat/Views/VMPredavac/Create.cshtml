                @Html.ValidationMessageFor(model => model.Predavaci.Prezime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Predavaci.OIB, htmlAttributes: new { @class = "control-label col-md-2" })
