                @Html.EditorFor(model => model.Predavaci.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Predavaci.Email, "", new { @class = "text-danger" })
            </div>
        </div>

