</div>
    <br />
    <h5><b>ADRESA STANOVANJA:</b></h5>
    <br />
   

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Adresepredavaca.Ulica)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Adresepredavaca.Kucni_broj)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Adresepredavaca.Grad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Adresepredavaca.Postanski_broj)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Adresepredavaca.Drzava)
