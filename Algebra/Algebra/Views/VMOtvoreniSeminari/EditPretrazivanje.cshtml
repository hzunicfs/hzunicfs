            @Html.ValidationMessageFor(model => model.Otvoreniseminari.Datum_pocetka, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Otvoreniseminari.Datum_zavrsetka, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
