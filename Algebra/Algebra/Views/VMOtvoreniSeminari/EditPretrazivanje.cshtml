        @Html.LabelFor(model => model.Otvoreniseminari.Predavaci_ID, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Otvoreniseminari.Predavaci_ID, new SelectList(Model.SLPredavaci, "Value", "Text"), "Odaberi predavača", htmlAttributes: new { @class = "control-label col-md-4" })
            @Html.ValidationMessageFor(model => model.Otvoreniseminari.Predavaci_ID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-7">
            <input type="submit" value="SPREMI" class="btn btn-default" />
        </div>
    </div>
</div>
}

