@model Algebra.Models.VMOtvoreniSeminari

@{
    ViewBag.Title = "Edit";
}

    <h3><b>OTVORENI SEMINAR-IZMJENA PODATAKA</b></h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Otvoreniseminari.Predavaci_ID)
    @Html.HiddenFor(model => model.Otvoreniseminari.AO_ID)
    @Html.HiddenFor(model => model.Otvoreniseminari.Seminar_ID)
