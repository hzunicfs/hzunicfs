@model IEnumerable<Algebra.Models.Adrese_upisanih>

@{
    ViewBag.Title = "Index";
}
    <link href="@Url.Content("~/Content/Style1.css")" rel="stylesheet" type="text/css" />
<h3><b>ADRESE POLAZNIKA</b></h3>

<p>
    @Html.ActionLink("Dodaj novu adresu", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ulica)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kucni_broj)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Postanski_broj)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Drzava)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ulica)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Kucni_broj)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Grad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Postanski_broj)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Drzava)
        </td>
        <td>
            @Html.ActionLink("Izmjeni", "Edit", new { id = item.AU_ID }) |
            @Html.ActionLink("Detalji", "Details", new { id = item.AU_ID }) |
            @Html.ActionLink("Izbriši", "Delete", new { id = item.AU_ID })
        </td>
    </tr>
}

</table>
